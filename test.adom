import 'test2.adom'

$testClass = 'classsss'

$items0 = [
  'buy milk',
  'walk cat',
  'throw dinner in garbage'
]

$items = items0

$random = [items[1]]

html lang='en' [
  head []
  body on:load(main) [
    div class={testClass} [
      a href="/page1" data-route='/page1' | Page 1 |
      a href='/page2' data-route='/page2' | Page 2 |
    ]
    if (page == '/page1') [ div | Page 1 {items[2]} | ]
    if (page == '/page2') [ div | Page 2 | ]
    if (10 <= 11) [ p | Sad | ]
    Something title='PLEASE SHOW UP';
    Component1 [ 
      span | Hello {random} from component 1 |
      Component2 [
	p | inside component 2 |
	Something title='very inside';
      ]
    ]
    br;
    input name='name';
    each (i, idx in items) [
      if (idx > 1) [ b | YOOOO | ]
      div | {idx}: {i} |
    ]
  ]
]

