doctype html5

module main -->

function route (e) {
  $update({ page: e.target.dataset.route })
}

<--

html lang='en' [
  head []
  body on:load(main) [
    div [
      a data-route='/page1' on:click(route) | Page 1 |
      a data-route='/page2' on:click(route) | Page 2 |
    ]
    div if(page eq '/page1') [
      p | HELLO, FROM PAGE 1 |
    ]
    div if(page eq '/page2') [
      p | HELLO, FROM PAGE 2 |
    ]
  ]
]

