module main -->

function increment () {
  adom.update({ count: adom.state.count + 1 })
}

<--

doctype html5

html [
  body on:load(main) [
    div | count: {count} |
    button onclick='increment()' | increment |
    span [
      | {count} |
      div class={count} [
	p | {count} |
      ]
    ] 
  ]
]
