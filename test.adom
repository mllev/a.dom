$testClass = 'classsss'

$items = [
  'buy milk',
  'walk cat',
  'throw dinner in garbage'
]

html lang='en' [
  head []
  body on:load(main) [
    div class={testClass} [
      a href='/page1' data-route='/page1' | Page 1 |
      a href='/page2' data-route='/page2' | Page 2 |
    ]
    if (page eq '/page1') [ div | Page 1 | ]
    if (page eq '/page2') [ div | Page 2 | ]
    if (testClass eq '{testClass}') [ p | YASSS | ]
    if (10 gt 11) [ p | Sad | ]
    each (i in items) [
      div | Hello |
    ]
  ]
]

