let name = 'matt'

tag Todo [
  let item = ''
  let items = []
  ---
  function addItem() {
    items.push(item);
    item = '';
  }
  ---
  input bind:value={item} []
  button on:click='addItem()' 'add'
  ul [
    each (i in items) [
      li '{{i}}'
    ]
  ]
]

doctype html
html [
  head[]
  body root [
    Todo[]
  ]
]
