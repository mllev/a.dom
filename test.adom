tag Page [
  doctype html
  html [
    head[]
    body [
      yield
    ]
  ]
]

let name = 'matt'

tag Todo [
  let item = ''
  let items = []
  ---
  function addItem() {
    items.push(item);
    item = '';
  }
  ---
  input bind:value={item} []
  button on:click='addItem()' 'add'
  ul [
    each (i in items) [
      li '{{i}}'
    ]
  ]
]

Page [
  div root [
  ]
]
