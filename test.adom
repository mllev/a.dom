doctype html5

module main -->
  function addItem () {
    let items = adom.state.items
    let el = document.getElementById('item')
  
    items.push(el.value)
    adom.update({ items: items })
    el.value = ''
  }
<--

$items = [
  'buy milk',
  'buy sausage',
  'buy mounds bar'
]

html [
  body on:load(main) [
    h1 | TODO APP |
    input id='item'; br;
    button on:click(addItem) onclick='addItem()' | ADD ITEM |
    ul [
      li each(i in items) | {i} |
    ]
    div | count: {items.length} |
    p if(name eq 'matt') | hello {name} |
  ]
]

