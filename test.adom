tag Page1 [
  p | HELLO, FROM PAGE 1 |
]

tag Page2 [
  div [
    p | HELLO, FROM PAGE 2 |
    yield
  ]
]

doctype html5

$items[0].name = 'matt'

html lang='en' [
  head []
  body on:load(main) [
    div [
      a href='/page1' data-route='/page1' | Page 1 |
      a href='/page2' data-route='/page2' | Page 2 |
    ]
    div if(page eq '/page1') [ Page1; ]
    div if(page eq '/page2') [ Page2 [ Page1; ] ]
    div each(i in items) | {i.name} |
  ]
]

