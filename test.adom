let name = 'matt'

tag Todo [
  let item = ''
  let items = []
  ---
  function addItem() {
    items.push(item);
    item = '';
  }
  ---
  input type='text' bind:value={item} []
  button on:click='addItem()' 'add'
  ul [
    each (i in items) [
      li '{{i}}'
    ]
  ]
]

let max = [repeat 0 10000]

html [
  head[]
  body root [
    input bind:value={name} []
    each (i in max) [
      p style='font-size: 8px; margin: 0; padding: 0;' '{{ name }}'
    ]
  ]
]
