doctype html5

const styles file 'main.css'
const script file 'main.js'
const adom file '../index.js'

layout Page [
  html [
    head [
      link href="https://fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet";
      style  | #{styles} |
      script | #{adom}   |
      script | #{script} |
    ]
    body [
      yield
    ]
  ]
]

use Page [
  div [
    h2 | a.dom playground |
    div.main [
      textarea.adom []
      textarea.html []
    ]
  ]
]