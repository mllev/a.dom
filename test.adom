$items = [
  'buy milk',
  'buy sausage',
  'buy mounds bar'
]

$people[0].name = 'matt'
$people[1].name = 'josephine'

doctype html5

module main -->
  function addItem () {
    $.items.push($select('#item').value)
    $update()
  }
<--

tag Li [
  ul [
    li each(p in people) | {props.title}, {i}, {p.name} |
  ]
  yield
  br;
]

html [
  body on:load(main) [
    h1 | TODO APP |
    input name={items[0]} id='item'; br;
    button on:click(addItem) | ADD ITEM |
    ul [
      li each(i in items) [
	Li title='hi' [
	  p | here {i} |
	]
      ]
    ]
    div | count: {items.length} |
    span if(items.length eq 7) | COUNT IS SEVEN |
  ]
]
