tag Todo [
  let item = ''
  let items = []

  ---
  function addItem() {
    items.push(item);
    item = '';
  }
  ---

  h1 "Todo List"
  input type='text' bind:value={item} []
  button on:click='addItem()' 'add'
  ul [
    each (i in items) [
      li "{{i}}"
    ]
  ]
]

let showTodo = false

html [
  head[]
  body root [
    button on:click="showTodo = !showTodo"
      "{{showTodo == true ? 'hide' : 'show'}} todo"
    if (showTodo) [
      Todo[]
    ]
  ]
]
